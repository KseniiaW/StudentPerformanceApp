@model IEnumerable<StudentPerformanceApp.Models.Student>

@{
    ViewData["Title"] = "Лучшие студенты";
}

<div class="card students-table-card">
    <div class="card-header bg-success text-white">
        <h3><i class="fas fa-trophy"></i> @ViewData["Title"]</h3>
        <p class="mb-0">Список 5 студентов с наивысшими баллами</p>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Группа</th>
                        <th class="text-center">Баллы</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(rank++)</td>
                                <td>@item.LastName</td>
                                <td>@item.FirstName</td>
                                <td>
                                    <span class="badge badge-primary">@item.Group</span>
                                </td>
                                <td class="text-center">
                                    <span class="score-badge badge-success">
                                        @item.Score
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Вернуться к списку
        </a>
    </div>
</div>

@section Styles {
    <style>
        .students-table-card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .score-badge {
            display: inline-block;
            min-width: 40px;
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: bold;
        }

        .badge-success {
            background-color: #d4edda;
            color: #155724;
        }

        .table th {
            border-top: none;
        }

        .table-responsive {
            border-radius: 0 0 10px 10px;
            overflow: hidden;
        }

        .card-header h3 {
            margin-bottom: 0.5rem;
        }
    </style>
}